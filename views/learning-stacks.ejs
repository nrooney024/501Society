<html>
	<head>
		<title>My Learning Stacks</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="icon" href="/images/501-society-tab-icon-round.png">
		<link rel="stylesheet" href="/css/main.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Exo:wght@100&family=Roboto&display=swap" rel="stylesheet">
	</head>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">


		

			<!-- Header -->
				<section id="header" class="wrapper">

					<!-- Logo -->
						<div id="pageHeader">
							<h1>My Learning Stacks</h1>
						</div>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li class="current"><a href="/">Home</a></li>
								<li><a href="learning-stacks">Learning Stacks</a></li>
								<li><a href="/logout" class="logout__btn">Logout</a></li>
							</ul>
						</nav>

						<button type="button" class="add-learning-stack-button" onclick="openForm()" >Add Learning Stack +</button>
					
				</section>

			
				<!-- Add learning stack popup -->
			
				<form action="/learning-stacks/createLearningStack" method='POST' class="add-learning-stack-form" id="addLearningStackForm">
					<button class="close-form" onclick="closeForm()">Close</button>
					<br>
					<h2 class="add-learning-stack-header">Add a Learning Stack</h2>
					<label for="learning-stack-name" class="form-name">Learning Stack Name</label>
					<input type="text" placeholder="Enter the Name of Your Learning Stack" name="learningStackName">
					<input type="submit" value="Submit" class="submit-form">
				</form>

				



			<!-- Main -->
				<div id="main" class="wrapper style2">
					<div class="container">
						<!-- Content -->
							<div id="content">

								<!-- Filters -->
									<nav class="filters">
										<a href="#">Tiles</a>
										<a href="#">List</a>
										<a href="#">Sort</a>
										<a href="#">Tags</a>
									</nav>	

								<!-- Tiles -->
									<!-- <a href="/learning-stack-page">
										<div class="tiles">
											<img src="/images/test-tile-img.png" alt="Khan Academy">
											<h3>Python</h3>
											<span>Last Opened: June 19th, 2022</span>
										</div>
									</a> -->

									<div class="tilesContainer">
										
										<% for(var i=0; i<learningStacks.length; i++) {%>						
												
											<div class="tile">
												<a href="/learning-stack-page/<%= learningStacks[i]._id%>">
													
														<h3><%= learningStacks[i].learningStackName %></h3>
														<span><%= learningStacks[i].dateCreated %></span>
													
												</a>

												<form
													action="/learning-stacks/deleteLearningStack/<%= learningStacks[i].id %>?_method=DELETE"
													method="POST">
													<button class="btn btn-primary fa fa-trash" type="submit"></button>
												</form>
											</div>
											  
										  <% } %>

									</div>
							</div>
					</div>
				</div>

			<!-- Footer -->
				</section>

		</div>

		<!-- Scripts -->
			<script src="/js/jquery.min.js"></script>
			<script src="/js/jquery.dropotron.min.js"></script>
			<script src="/js/browser.min.js"></script>
			<script src="/js/breakpoints.min.js"></script>
			<script src="/js/util.js"></script>
			<script src="/js/main.js"></script>

	</body>
</html>